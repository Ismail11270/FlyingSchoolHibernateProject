<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Person" table="PERSONS">
        <id name="id" type="int">
            <column name="PERSON_ID"/>
            <generator class="native"/>
        </id>
        <property name="firstName" type="java.lang.String"/>
        <property name="secondName" type="java.lang.String"/>
        <property name="SSN" type="java.lang.Double"/>
        <many-to-one name="address" entity-name="model.Address"
                     column="ADDRESS_ID" not-null="true"
                     cascade="all"/>
    </class>
</hibernate-mapping>